<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    >

    <ImageButton
        android:id="@+id/outbrain_logo_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/smartfeed_logo"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        />

    <com.outbrain.OBSDK.Viewability.OBTextView
        android:id="@+id/outbrain_sponsored_obtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-light"
        android:layout_toLeftOf="@+id/adchoices_header_logo"
        android:layout_marginRight="4dp"
        android:text="Sponsored"
        android:textColor="#93908c"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/adchoices_header_logo"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/adchoices"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>